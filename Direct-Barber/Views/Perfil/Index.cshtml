﻿<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/IndexPerfil.css" />
    <title>Perfil</title>

</head>
<body>
    <div class="profile-container">
        <div class="profile-header">
            <img src="/images/@(Model.Foto ?? "usuario.png")" alt="Foto de perfil" class="profile-photo">
            <div class="profile-info">
                <h2>Perfil</h2>
                <p><strong>Nombre:</strong> @Model.Nombre @Model.Apellido</p>
                <p><strong>Dirección:</strong> @Model.Direccion</p>
                <p><strong>Contacto:</strong> @Model.Telefono</p>
            </div>
        </div>

        <div class="support-container">
            <a href="#" class="support-button">Soporte técnico</a>
            <a href="#" class="support-button">Ayuda</a>
            <a href="#" class="support-button">Términos y condiciones</a>
        </div>

        <div class="action-buttons">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Editar</a>
            <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">Eliminar</a>
        </div>
    </div>
</body>
